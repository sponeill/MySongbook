
@{
	ViewBag.Title = "SubmitSong";
	Layout = "~/Views/Shared/_Layout.cshtml";
	@model MySongbook.Models.Song
}


<section id="subpageImage">
	<h2 class="homeTitle">Submit a Song</h2>
	<h4 class="homeTitle"> <em>Knowledge (and music) was meant to be shared.</em></h4>
</section>

<section id="page2">
	<div class="subPage">
			<h4>This site is dependant upon user input and correct information. Please <em>double check</em> your information before subitting!</h4>
		<hr />


			<form method="post" action="@Url.Action("SubmitSong", "Home")">
				<div id="search">
					<p><strong>Title:</strong><br /> @Html.TextBoxFor(s => s.Title, new { placeholder = "Enter the Song Title" })</p>
					<p><strong>Composer:</strong><br /> @Html.TextBoxFor(s => s.Composer, new { placeholder = "Last, First" })</p>
					<p><strong>Lyricist:</strong><br /> @Html.TextBoxFor(s => s.Lyricist, new { placeholder = "Last, First" })</p>
					<p><strong>Source Material:</strong><br /> @Html.TextBoxFor(s => s.Source, new { placeholder = "Musical, Artist, Opera, etc." })</p>
				</div>
				<div id="search">
					<p><strong>Category:</strong>
						<br />
						<select name="Genre">
							<option value="Contemporary Musical Theatre Uptempo">Contemporary Musical Theatre Uptempo</option>
							<option value="Contemporary Musical Theatre Ballad">Contemporary Musical Theatre Ballad</option>
							<option value="Classical Musical Theatre Uptempo">Classical Musical Theatre Uptempo</option>
							<option value="Classical Musical Theatre Ballad">Classical Musical Theatre Ballad</option>
							<option value="Pop/Rock/Country">Pop/Rock/Country</option>
							<option value="Jazz/Blues">Jazz/Blues</option>
							<option value="Comedic">Comedic</option>
							<option value="Disney">Disney</option>
							<option value="Classical">Classical</option>
						</select>
					</p>
					<p><strong>Gender:</strong>
						<br />
						<select name="Gender">
							<option value="Male">Male</option>
							<option value="Female">Female</option>
							<option value="Either/Both">Either/Both</option>
						</select>
					</p>
					<p><strong>Voice Part:</strong>
						<br />
						<select name="VoicePart">
							<option value="Bass-Baritone">Bass-Baritone</option>
							<option value="Bari-Tenor">Bari-Tenor</option>
							<option value="Tenor">Tenor</option>
							<option value="Alto">Alto</option>
							<option value="Mezzo">Mezzo</option>
							<option value="Soprano">Soprano</option>
							<option value="Child">Child</option>
							<option value="Duet">Duet</option>
						</select>

					</p>
					<div id="search" style="margin-left: 45px;">
						<button>Submit!</button>
					</div>
				</div>

			</form>
		<hr />
		</div>
</section>
<div id="bottomMargin"></div>
